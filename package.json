{
  "name": "criticide",
  "version": "0.0.2",
  "description": "Criticide Command Line Interface",
  "main": "criticide",
  "repository": "https://github.com/rayk/criticide-engine",
  "author": "Ray King <taipan.king@gmail.com>",
  "license": "MIT",
  "private": false,
  "preferGlobal": true,
  "bin": {
    "criticide": ".index.js"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "commander": "^2.12.2",
    "dotenv": "^4.0.0",
    "fs-extra": "^5.0.0",
    "inquirer": "^4.0.1",
    "normalizr": "^3.2.4",
    "ramda": "^0.25.0",
    "redux": "^3.7.2",
    "shortid": "^2.2.8",
    "string": "^3.3.3"
  },
  "devDependencies": {
    "assert-plus": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.13.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.3.1",
    "mocha": "^4.0.1",
    "prettier": "^1.9.1",
    "prettier-eslint": "^8.3.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-async-to-generator"
    ],
    "sourceMaps": "both"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "prettier",
      "prettier/standard"
    ],
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    }
  },
  "jest": {
    "verbose": true
  }
}
